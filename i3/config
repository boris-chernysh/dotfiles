set $mod Mod4

set $font Arimo for Powerline 10
font pango:$font

bindsym $mod+Return exec terminator
bindsym $mod+Shift+q kill
bindsym $mod+d exec exec rofi -show run
bindsym $mod+p exec exec rofi -show window

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+b split h
bindsym $mod+v split v

bindsym $mod+f fullscreen

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

bindsym $mod+a focus parent
bindsym $mod+Shift+a focus child

bindsym $mod+1 workspace 1.workplace
bindsym $mod+2 workspace 2.workplace
bindsym $mod+3 workspace 3.IM
bindsym $mod+4 workspace 4.playground
bindsym $mod+5 workspace 5.music
bindsym $mod+6 workspace 6.kodi

bindsym $mod+Shift+1 move container to workspace 1.workplace
bindsym $mod+Shift+2 move container to workspace 2.workplace
bindsym $mod+Shift+3 move container to workspace 3.IM
bindsym $mod+Shift+4 move container to workspace 4.playground
bindsym $mod+Shift+5 move container to workspace 5.music
bindsym $mod+Shift+6 move container to workspace 6.kodi

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

mode "resize" {
	bindsym h resize shrink width 10 px or 10 ppt
	bindsym j resize grow height 10 px or 10 ppt
	bindsym k resize shrink height 10 px or 10 ppt
	bindsym l resize grow width 10 px or 10 ppt

	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

bar {
	position top
	status_command i3status
	workspace_buttons yes
	colors {
		separator #666666
		background #222222
		statusline #dddddd
		focused_workspace #222222 #222222 #4FB8CC
		active_workspace #222222 #222222 #dddddd
		inactive_workspace #222222 #222222 #dddddd
		urgent_workspace  #222222 #222222 #dddddd
	}
}

exec --no-startup-id nm-applet
exec --no-startup-id volumeicon
exec --no-startup-id screencloud
exec --no-startup-id syndaemon -i 0.5 -t -K -R -d

bindsym $mod+g exec google-chrome
bindsym $mod+t border toggle
bindsym $mod+m bar mode toggle

bindsym XF86MonBrightnessDown exec xbacklight -dec 10
bindsym XF86MonBrightnessUp exec xbacklight -inc 10

bindsym XF86AudioRaiseVolume exec amixer set Master 7%+
bindsym XF86AudioLowerVolume exec amixer set Master 7%-
bindsym XF86AudioMute exec amixer -D pulse set Master 1+ toggle

client.focused #333333 #333338 #4FB8CC #dddddd
client.focused_inactive #333333 #333338 #447188 #292d2e
client.unfocused #333333 #333333 #888888 #292d2e
client.urgent #2f343a #900000 #ffffff #900000
